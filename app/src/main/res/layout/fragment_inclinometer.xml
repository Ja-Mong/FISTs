<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.inclinometer.InclinometerFragment">

    <TextureView
        android:id="@+id/camera_preview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:paddingLeft="1dp"
        android:paddingTop="1dp"
        android:paddingRight="1dp"
        android:paddingBottom="1dp"
        android:rotation="0" />

    <ImageView
        android:id="@+id/focus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/focus"
        android:layout_centerInParent="true"/>

    <com.example.forestinventorysurverytools.ui.inclinometer.InclinometerIndicator
        android:id="@+id/inclinometer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/focus"
        android:layout_centerInParent="true"/>

    <ImageButton
        android:id="@+id/Btn_inclinometer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="65dp"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_background"
        android:src="@drawable/slope"/>

</RelativeLayout>
