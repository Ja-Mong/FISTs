<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#413F3F">

    <TextView
        android:id="@+id/guide3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="283dp"
        android:text="3. 사용자 눈높이 설정"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guide_view3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/guide_view3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/guide3"
        android:layout_centerInParent="true"
        android:src="@drawable/guideview3"
        app:layout_constraintBottom_toTopOf="@+id/line1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guide3" />

    <TextView
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/guide_view3"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="18dp"
        android:text="· ① 번과 같은 그림에 따라 핸드폰을 천천히 움직여 바닥을 찾습니다."
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/line2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guide_view3" />

    <TextView
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="30dp"
        android:text="· 바닥을 찾았다면 흰색 점들이 바닥에 생기는 것을 볼 수 있습니다."
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/line3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line1" />

    <TextView
        android:id="@+id/line3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line2"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="16dp"
        android:text="· 흰색 점 부분을 클릭하면 다음 그림과 같이 AR객체가 렌더링됩니다."
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/guide_view3_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line2" />

    <ImageView
        android:id="@+id/guide_view3_1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/line3"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/guideview3_1"
        app:layout_constraintBottom_toTopOf="@+id/line4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line3" />

    <TextView
        android:id="@+id/line4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/guide_view3_1"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="186dp"
        android:text="· ①: 바닥을 터치하여 렌더링된 AR객체"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/line5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guide_view3_1" />

    <TextView
        android:id="@+id/line5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line4"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="64dp"
        android:text="· ②: 아래, 위 버튼을 클릭하여 AR객체를 빨간선에 맞추세요."
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/line6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line4" />

    <TextView
        android:id="@+id/line6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line5"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="15dp"
        android:text="· 위치조정 후, ③ 완료버튼을 통해 ④에 사용자 눈높이가 나타납니다."
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line5" />

</androidx.constraintlayout.widget.ConstraintLayout>